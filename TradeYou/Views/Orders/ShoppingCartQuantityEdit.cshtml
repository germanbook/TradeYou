@model TradeYou.Models.Order

@{ ViewData["Title"] = "ShoppingChartQuantityEdit"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Trade You - Weltec's #1 webpage</title>
    <!--TradeYoufont-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />

</head>


<body>
    
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-info text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-left">

                <div class="mb-md-5 mt-md-4 pb-5">
                    <div class="row">
                        <div class="col-md-9">
                            <h4>Quantity Edit</h4>
                            <hr />
                            <form asp-action="ShoppingCartQuantityEdit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="OId" />

                                <div hidden class="form-group">
                                    <label asp-for="UId" class="control-label"></label>
                                    <select asp-for="UId" class="form-control" asp-items="ViewBag.UId"></select>
                                    <span asp-validation-for="UId" class="text-danger"></span>
                                </div>
                                <div hidden class="form-group">
                                    <label asp-for="PId" class="control-label"></label>
                                    <select asp-for="PId" class="form-control" asp-items="ViewBag.PId"></select>
                                    <span asp-validation-for="PId" class="text-danger"></span>
                                </div>
                                <div hidden class="form-group">
                                    <label asp-for="OPaymentype" class="control-label"></label>
                                    <input asp-for="OPaymentype" class="form-control" />
                                    <span asp-validation-for="OPaymentype" class="text-danger"></span>
                                </div>
                                <div hidden class="form-group">
                                    <label asp-for="OShippingtype" class="control-label"></label>
                                    <input asp-for="OShippingtype" class="form-control" />
                                    <span asp-validation-for="OShippingtype" class="text-danger"></span>
                                </div>
                                <div hidden class="form-group">
                                    <label asp-for="OOrderumber" class="control-label"></label>
                                    <input asp-for="OOrderumber" class="form-control" />
                                    <span asp-validation-for="OOrderumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OQuantity" class="control-label"></label>
                                    <input id="quantity" asp-for="OQuantity" class="form-control" />
                                    <span asp-validation-for="OQuantity" class="text-danger"></span>
                                </div>



                                <div class="form-group">
                                    <input id="save" type="submit" value="Save" class="btn btn-secondary" />  |
                                    <a id="cancel" asp-action="ShoppingCart" class="btn btn-secondary">Cancel</a>
                                </div>

                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
