@model TradeYou.Models.Order

@{
    ViewData["Title"] = "View";
}

<h1>Check Out</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckOut">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OId" />

            <div class="form-group">
                <label asp-for="OPaymentype" class="control-label"></label>
                <select asp-for="OPaymentype" name="paymentype" id="paymenttype">
                    <option value="1">Credit Card</option>
                    <option value="2">Apple Pay</option>
                </select>
                <span asp-validation-for="OPaymentype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OShippingtype" class="control-label"></label>
                <select asp-for="OShippingtype" name="shippingtype" id="shippingtype">
                    <option value="1">Pick Up</option>
                    <option value="2">Free Shipping</option>
                </select>
                <span asp-validation-for="OShippingtype" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />|
                <a asp-action="ShoppingCart">Back</a>
            </div>
        </form>
    </div>
</div>


