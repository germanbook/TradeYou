@model TradeYou.Models.User

@{
    ViewData["Title"] = "Login";
}

<body>
    
 <section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-info text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

              <div class="mb-md-5 mt-md-4 pb-5">

                  <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                  <p class="text-white-50 mb-5">Please enter username and password</p>
                  <form asp-action="Login" method="post" enctype="multipart/form-data">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <div class="form-outline form-white mb-4">
                          <label class="form-label" for="typeEmailX">Username</label>
                          <input asp-for="UName" name="UName" autocomplete="off" id="typeUsername" class="form-control form-control-lg" />
                          <span asp-validation-for="UName" class="text-danger"></span>
                      </div>

                      <div class="form-outline form-white mb-4">
                          <label class="form-label" for="typePasswordX">Password</label>
                          <input asp-for="UPassword" name="UPassword" type="password" autocomplete="off" id="typePasswordX" class="form-control form-control-lg" />
                          <span asp-validation-for="UPassword" class="text-danger"></span>
                      </div>

                      <div class="form-group">
                          <input id="loginSubmit" type="submit" value="Login" class="btn btn-outline-light btn-lg px-5" />
                      </div>
                      
                  </form>
              </div>

            <div>
              <p class="mb-0">Don't have an account? Ask admin for register </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
