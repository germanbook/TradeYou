@model TradeYou.Models.User

@{ ViewData["Title"] = "View"; }


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Trade You - Weltec's #1 webpage</title>
    <!--TradeYoufont-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />

</head>


<body>

    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-info text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-left">

                <div class="mb-md-5 mt-md-4 pb-5">
                    <div class="row">
                        <div class="col-md-9">
                            <h1>User Profile</h1>

                            <hr />

                            <form asp-action="UserProfileEdit" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="UId" />
                                <div class="form-group">
                                    <label asp-for="UName" class="control-label"></label>
                                    <input readonly="readonly" asp-for="UName" class="form-control" />
                                    <span asp-validation-for="UName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UPassword" class="control-label"></label>
                                    <input asp-for="UPassword" class="form-control" />
                                    <span asp-validation-for="UPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UDob" class="control-label"></label>
                                    <input asp-for="UDob" class="form-control" />
                                    <span asp-validation-for="UDob" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UEmail" class="control-label"></label>
                                    <input asp-for="UEmail" class="form-control" />
                                    <span asp-validation-for="UEmail" class="text-danger"></span>
                                </div>
                                <div hidden class="form-group">
                                    <label asp-for="UIsAdmin" class="control-label"></label>
                                    <input asp-for="UIsAdmin" class="form-control" />
                                    <span asp-validation-for="UIsAdmin" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-secondary" /> |
                                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back</a>
                                </div>

                            </form>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

