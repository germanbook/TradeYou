@model TradeYou.Models.Product

@{ ViewData["Title"] = "Delete"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Trade You - Weltec's #1 webpage</title>
    <!--TradeYoufont-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />

</head>


<body>
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-info text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-left">

                <div class="mb-md-5 mt-md-4 pb-5">
                    <div class="row">
                        <div class="col-md-9">

                            <h1>Delete</h1>

                            <h3>Are you sure you want to delete this product?</h3>
                            <hr />

                            <dl hidden class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PProductname)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PProductname)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PPrice)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PPrice)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PQuantity)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PQuantity)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PMade)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PMade)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PNewUsed)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PNewUsed)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PImagePath)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PImagePath)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="PId" />
                                <input id="delete" type="submit" value="Delete" class="btn btn-danger" /> |
                                <a id="cancel" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>
