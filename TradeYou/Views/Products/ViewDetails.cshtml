@model TradeYou.Models.Product

@{
    ViewData["Title"] = "View";
}

<h1>Product details</h1>
<form asp-action="AddShoppingCart">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PId" />
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PProductname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PProductname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PQuantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PQuantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PMade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PMade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PNewUsed)
            </dt>
            <dd class="col-sm-10">
                @if (Model.PNewUsed == 1)
                {
                    <p>New</p>
                }
                else
                if (Model.PNewUsed == 2)
                { 
                    <p>Used</p>
                }
            </dd>
            <dt hidden class="col-sm-2">
                @Html.DisplayNameFor(model => model.PImagePath)
            </dt>
            <dd hidden class="col-sm-10">
                @Html.DisplayFor(model => model.PImagePath)
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <input type="submit" value="Adding to shopping cart" class="btn btn-primary" />|
        <a asp-action="Index" asp-controller="Home">Back</a>
    </div>
</form>
