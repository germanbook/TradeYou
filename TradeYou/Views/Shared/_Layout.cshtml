@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Trade You - Weltec's #1 webpage -  @ViewData["Title"]</title>
    <!--TradeYoufont-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo-image" src="~/assets/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        @if (@HttpContextAccessor.HttpContext.Session.GetInt32("Admin") == 1)
                        {
                            <li class="nav-item">
                                <a id="products" class="nav-link active" aria-current="page" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                            </li>

                            <li class="nav-item">
                                <a id="users" class="nav-link active" aria-current="page" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
}


                        @if (@HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                        {

                            <li hidden class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>

                            <li hidden class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Orders" asp-action="ShoppingCart">Shopping Cart</a>
                            </li>
                            <li hidden class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                            </li>

                            <li hidden class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Users" asp-action="UserProfileEdit">My Trade You</a>
                            </li>



                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">My Trade You</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a id="profile" class="dropdown-item" asp-area="" asp-controller="Users" asp-action="UserProfileEdit" >
                                                <i class="bi bi-person-circle"></i> User Profile</a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider" />
                                        </li>
                                        <li>
                                            <a id="myOrder" class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index">My Order</a>
                                        </li>
                                        <li>
                                            <a id="userLogout" class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Logout">Log out</a>
                                        </li>
                                    </ul>
                            </li>


                            <li class="nav-item">
                                <div class="nav-link active" aria-current="page">Welcome @HttpContextAccessor.HttpContext.Session.GetString("UserName") !</div>

                            </li>


                        }
                        else
                        {
                            <li class="nav-item">
                                <a id="login" class="nav-link active" aria-current="page" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                    @if (@HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                    {
                        <form class="d-flex" method="get" asp-area="" asp-controller="Orders" asp-action="ShoppingCart">
                            <button id="shoppingCart" class="btn btn-outline-dark" type="submit">
                                <i class="bi-cart-fill me-1"></i>
                                Cart
                                <span class="badge bg-dark text-white ms-1 rounded-pill">@HttpContextAccessor.HttpContext.Session.GetInt32("ShoppingCartCount")</span> <!--Shopping cart product number-->
                            </button>
                        </form>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Trade You team 2021</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
